{{> layout/top}}
<style>
    .add {
        text-decoration:none;
        transition : 0.2s;
    }

    .add:hover{
        text-decoration:underline;
        color: #0d6efd;
    }
</style>

<div class="container my-5 py-5" style="max-width: 900px;">
    <div class="card shadow-sm border-0 p-4 p-md-5 bg-light">
        <div class="card-body">

        <h1 class="text-center fw-bold mb-5"> 회원가입 </h1>

        <form method="get" action="/member/memberInput_ok">

            <div class="row g-1 align-items-center mb-4 justify-content-center">
                <div class="col-2 text-end px-2">
                    <label class="col-form-label fw-bold">아이디</label>
                </div>
                <div class="col-md-5">
                    <input type="text" name="id" class="form-control" placeholder="아이디 입력">
                </div>
                <div class="col-3 ps-3">
                    <span class="form-text small">영어 소문자 5-20자</span>
                </div>
            </div>

            <div class="row g-1 align-items-center mb-4 justify-content-center">
                <div class="col-2 text-end px-2">
                    <label class="col-form-label fw-bold">비밀번호</label>
                </div>
                <div class="col-md-5">
                    <input type="text" name="password" class="form-control" placeholder="비밀번호 입력">
                </div>
                <div class="col-3 ps-3">
                    <span class="form-text small">비밀번호는 8-20자 이내</span>
                </div>
            </div>

            <div class="row g-1 align-items-center mb-4 justify-content-center">
                <div class="col-2 text-end px-2">
                    <label class="col-form-label fw-bold">이름</label>
                </div>
                <div class="col-md-5">
                    <input type="text" name="name" class="form-control" placeholder="이름 입력">
                </div>
                <div class="col-3 ps-3"></div>
            </div>

            <div class="row g-1 align-items-center mb-4 justify-content-center">
                <div class="col-2 text-end px-2">
                    <label class="col-form-label fw-bold">나이</label>
                </div>
                <div class="col-md-5">
                    <input type="number" name="age" class="form-control" placeholder="나이 입력">
                </div>
                <div class="col-3 ps-3"></div>
            </div>

            <div class="row g-1 align-items-center mb-4 justify-content-center">
                <div class="col-2 text-end px-2">
                    <label class="col-form-label fw-bold">지역</label>
                </div>
                <div class="col-md-5">
                    <input type="text" name="addr" class="form-control" placeholder="거주지역(예: 서울)">
                </div>
                <div class="col-3 ps-3"></div>
            </div>

            <div class="row g-1 align-items-center mb-5 justify-content-center">
                <div class="col-2 text-end px-2">
                    <label class="col-form-label fw-bold">연락처</label>
                </div>
                <div class="col-md-5">
                    <input type="text" name="mobile" class="form-control" placeholder="010-0000-0000">
                </div>
                <div class="col-3 ps-3"></div>
            </div>

            <div class="text-center">
                <button type="submit"
                        class="btn btn-warning text-white btn-lg px-5 shadow-sm"> 회원 가입 하기 </button>
                <div class="mt-3">
                    <a href="/member/memberLogin"
                       class="add small text-secondary">
                        이미 회원이신가요? 로그인 페이지로
                    </a>
            </div>
            </div>
        </form>
        </div>
    </div>
</div>
{{> layout/bottom}}