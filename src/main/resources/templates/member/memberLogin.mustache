{{> layout/top}}
<style>
    .add {
        text-decoration : none;
        transition : 0.2s;
    }

    .add:hover{
        text-decoration : underline;
        color : #0d6efd;
    }
</style>

<div class="container my-5 py-5" style="max-width : 900px;">
<div class="card shadow-sm border-0 p-4 p-md-5 bg-light">
    <div class="card-body">

<h1 class="text-center fw-bold mb-5"> 로그인 </h1>

<form method="post" action="/member/auth">

    <div class="row g-1 align-items-center mb-4 justify-content-center">
        <div class="col-2 text-end px-2">
            <label for="inputid" class="col-form-label fw-bold"> 아이디 </label>
        </div>
        <div class="col-md-5">
            <input type="text" id="inputid" name="id" class="form-control" placeholder="아이디 입력">
        </div>
        <div class="col-3 ps-3">
            <span class="form-text small">
                영어 소문자 5-20자 이내
            </span>
        </div>
    </div>

<div class="row g-1 align-items-center mb-5 justify-content-center">
    <div class="col-2 text-end px-2">
        <label for="inputPassword" class="col-form-label fw-bold">비밀번호</label>
    </div>
    <div class="col-md-5">
        <input type="text" id="inputPassword" name="password" class="form-control" placeholder="비밀번호 입력">
    </div>
    <div class="col-3 ps-3">
        <span class="form-text small">
            비밀번호는 8-20자 이내
        </span>
    </div>
</div>
    <div class="text-center">
    <button type="submit" class="btn btn-primary btn-lg px-5 shadow-sm"> 로그인하기 </button>
        <div class="mt-3">
            <a href="/member/memberInput"
               class="add small text-secondary">
                아직 회원이 아니신가요? 회원가입
            </a>
        </div>
    </div>
</form>
</div>
</div>
</div>
{{> layout/bottom}}