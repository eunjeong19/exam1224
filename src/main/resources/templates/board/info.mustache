<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <style>
        .comment-box{
            white-space : pre-wrap;
            word-break : break-word;
            line-height : 1.5;
            text-align:left;
        }

        .post-content{
            white-space : pre-wrap;
            word-break : break-word;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</head>
<body>
{{> layout/top}}

<div class="container my-5" style="max-width : 900px;">
    <div class="d-flex justify-content-between align-items-center mb-4 px-2">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-2">
                    <li class="breadcrumb-item"><a href="/board" class="text-decoration-none text-info small fw-bold">Board List</a></li>
                    <li class="breadcrumb-item active small" aria-current="page">View Post</li>
                </ol>
            </nav>
        <h2 class="fw-bold m-0"
            style="letter-spacing: -1px;"> 게시글 상세보기 </h2>
    </div>
        <a href="/board" class="btn btn-outline-secondary btn-sm px-3 shadow-sm rounded-3">
            <i class="bi bi-list"></i> 목록으로
        </a>
    </div>

    <!--게시글 상세보기-->
<div class="card shadow-sm border-0 mb-5 bg-white rounded-4 overflow-hidden">
    <div style="height:5 px; background: linear-gradient(to right, #0d6efd, #0dcaf0);"></div>

    <div class="card-body p-4 p-md-5">
        <div class="mb-4">
        <span class="badge bg-info-subtle text-info mb-3 px-3 py-2 rounded-pill fw-bold"> No. {{board.id}} </span>
        <h4 class="display-6 fw-bold text-dark mb-3">제목 : {{board.title}}</h4>
            <div class="d-flex align-items-center text-muted small ps-1">
                <i class="bi bi-person-circle me-2"></i>
                <span class="fw-bold text-secondary">
                   작성자 {{#board.name}} : {{board.name}} {{/board.name}}
                </span>
            </div>
        </div>

        <hr class="my-4" style="opacity: 0.1;">

        <div class="post-content text-dark ps-1"
             style="min-height: 250px; line-height: 1.9; font-size: 1.1rem; letter-spacing: 0.01rem;">
            {{board.content}}
        </div>
    </div>
</div>

    <div class="px-2 mb-5">
    <h6 class="fw-bold mb-4 text-dark d-flex align-items-center">
        <i class="bi bi-chat-left-text-fill text-info me-2"></i>
        댓글 <span class="text-info ms-1">{{count}}</span>
    </h6>

        {{#msg}}
            <script>
                alert("{{msg}}");
            </script>
        {{/msg}}

    {{#comment}}
    <div class="card border-0 p-4 mb-3 bg-light rounded-4 shadow-sm">
        <div class="d-flex justify-content-between align-items-start mb-2">
            <div class="d-flex align-items-center">
                <div class="bg-white rounded-circle d-flex align-items-center justify-content-center me-2 shadow-sm"
                     style="width:35px; height:35px;">
                    <i class="bi bi-person text-info"></i>
                </div>
           <a href="/comment/commentEdit/{{id}}"
              class="fw-bold text-dark text-decoration-none">
               {{name}}
           </a>
        </div>
            <button class="btn btn-link text-danger text-decoration-none p-0 small"
                    style="font-size : 0.8rem; opacity: 0.7;"
                    onclick="location.href='/comment/delete/{{id}}?board_id={{board.id}}'">
            댓글 삭제
            </button>
        </div>

            <div class="comment-box text-secondary ps-1 mt-2"
                 style="line-height:1.6; font-size:0.95rem;">
                {{content}}
            </div>
        </div>
        {{/comment}}

        {{^comment}}
            <div class="text-center py-5 bg-light rounded-4 border-2 border-dashed">
            <p class="text-muted small mb-0">등록된 댓글이 없습니다.</p>
            </div>
        {{/comment}}
    </div>

    <!--댓글 등록 -->
    <div class="card shadow-sm border-0 p-4 mb-5 bg-white rounded-4">
        <div class="mb-4">
        <h6 class="text-dark fw-bold m-0"> 댓글 남기기 </h6>
        </div>

            <form method="post" action="/comment/create">
                <input type="hidden" name="board_id" value="{{board.id}}">

                <div class="mb-3">
                    <label class="form-label small fw-bold text-secondary ps-1">작성자</label>
                    <input type="text" name="name" class="form-control border-0 bg-light py-2 p-3 shadow-sm rounded-3" placeholder="작성자"
                           style="font-size: 0.9rem; max-width: 240px;">
                    </div>

                <div class="mb-3">
                    <label class="form-label small fw-bold text-secondary ps-1">댓글</label>
                    <textarea name="content" rows="4"
                              class="form-control border-0 bg-light p-3 shadow-sm rounded-3" placeholder="댓글을 입력하세요"
                          style="font-size: 0.9rem; resize: none;"></textarea>
                </div>

                <div class="text-end">
                    <button class="btn btn-info text-white shadow-sm rounded-3 px-4 py-2 fw-bold"
                            style="transition: 0.3s;">
                        댓글 등록
                    </button>
                </div>
            </form>
    </div>
    </div><!--container 닫기-->
{{> layout/bottom}}
</body>
</html>